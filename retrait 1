    <script>
        $('#tijiao').on('click',function(){
            var num = $('.jine').val();//金额
            var bankname = $('.bankname').val();//银行名称
            var banknumber = $('.banknumber').val();//金额
            var password = $('.password').val();//金额
            if(!num||num<=0){
                layer.msg('Enter the correct Bitcoin units');return;
            }
            // if(num%500!=0){
            //     layer.msg('Minimum withdrawal amount is 500');return;
            // }
            if(!password){
                layer.msg('Enter your secure key');return;
            }if(password){
                layer.msg('Invalid secure key');return;
            }
            $(this).attr('disabled','disabled').val('withdrawing...');
            
        })
        
